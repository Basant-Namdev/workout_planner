{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "views/**",
            "use": "@vercel/static"
        }
    ],
    "routes":[
        {
            "src": "/profile/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/reviews",
            "dest": "server.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "views/$1"
        }
    ]
}